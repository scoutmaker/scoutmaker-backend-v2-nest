{
  "name": "scoutmaker-backend-v2-nest",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "prisma generate && nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "node dist/main",
    "start:dev": "dotenv -e .env.development -- nest start --watch",
    "start:debug": "dotenv -e .env.development -- nest start --debug --watch",
    "start:prod": "nest start",
    "migrate:postgres": "dotenv -e .env.development -- npx prisma migrate dev",
    "prisma:validate": "dotenv -e .env.development -- npx prisma validate",
    "reset:postgres": "dotenv -e .env.development -- npx prisma migrate reset",
    "reset:postgres-staging": "dotenv -e .env.staging -- npx prisma migrate reset",
    "push:postgres": "dotenv -e .env.development -- npx prisma db push",
    "seed:dev": "dotenv -e .env.development -- ts-node prisma/seed/seed.ts",
    "seed-admin:dev": "dotenv -e .env.development -- ts-node prisma/seed/seed-admin.ts",
    "seed:staging": "dotenv -e .env.staging -- ts-node prisma/seed/seed.ts",
    "seed-admin:staging": "dotenv -e .env.staging -- ts-node prisma/seed/seed-admin.ts",
    "seed-admin:production": "dotenv -e .env.production -- ts-node prisma/seed/seed-admin.ts",
    "studio": "dotenv -e .env.development -- npx prisma studio",
    "studio:staging": "dotenv -e .env.staging -- npx prisma studio",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "test": "dotenv -e .env.test jest",
    "test:watch": "dotenv -e .env.test jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "dotenv -e .env.test -- npx prisma migrate reset --force && npx prisma generate --schema prisma/schema.prisma && jest --config ./test/jest-e2e.json --maxWorkers=1",
    "deploy:staging": "git push heroku develop:main"
  },
  "dependencies": {
    "@liaoliaots/nestjs-redis": "^8.1.0",
    "@nestjs/common": "^8.4.4",
    "@nestjs/config": "^2.0.0",
    "@nestjs/core": "^8.4.4",
    "@nestjs/event-emitter": "^1.1.1",
    "@nestjs/platform-express": "^8.4.4",
    "@nestjs/schedule": "^3.0.2",
    "@nestjs/swagger": "^5.2.1",
    "@prisma/client": "4",
    "@sendgrid/mail": "^7.6.2",
    "bcrypt": "^5.0.1",
    "chance": "^1.1.8",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.13.2",
    "cookie-parser": "^1.4.6",
    "date-fns": "^2.28.0",
    "ioredis": "^5.0.4",
    "jsonwebtoken": "^8.5.1",
    "nestjs-i18n": "^9.0.10",
    "papaparse": "^5.3.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.5",
    "slugify": "^1.6.5",
    "swagger-ui-express": "^4.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.4",
    "@commitlint/config-conventional": "^16.2.4",
    "@nestjs/cli": "^8.2.5",
    "@nestjs/schematics": "^8.0.10",
    "@nestjs/testing": "^8.4.4",
    "@types/bcrypt": "^5.0.0",
    "@types/chance": "^1.1.3",
    "@types/cookie-parser": "^1.4.3",
    "@types/cron": "^2.4.0",
    "@types/express": "^4.17.13",
    "@types/jest": "27.4.1",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/multer": "^1.4.7",
    "@types/node": "^17.0.29",
    "@types/papaparse": "^5.3.3",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "dotenv-cli": "^5.1.0",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^7.0.4",
    "jest": "^28.0.2",
    "prettier": "^2.6.2",
    "prisma": "4",
    "source-map-support": "^0.5.21",
    "supertest": "^6.2.3",
    "ts-jest": "^27.1.4",
    "ts-loader": "^9.2.9",
    "ts-node": "^10.7.0",
    "tsconfig-paths": "^3.14.1",
    "typescript": "^4.6.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
